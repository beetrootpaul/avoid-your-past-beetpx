{
  "name": "avoid-your-past-beetpx",
  "version": "0.0.0",
  "author": "Beetroot Paul",
  "license": "MIT",
  "private": true,
  "description": "A snake-like BeetPx game where each collected coin brings a harmful memory of your past steps.",
  "homepage": "https://github.com/beetrootpaul/avoid-your-past-beetpx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beetrootpaul/avoid-your-past-beetpx.git"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "prepare": "husky install",
    "checkForDepedencyUpdates": "npm-check-updates",
    "cleanup": "rimraf ./.beetpx/ ./index.html ./itch_io_simulation.html",
    "format": "prettier --ignore-path .gitignore --write src/",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "start": "beetpx dev --open --htmlTitle \"[dev] Avoid Your Past\"",
    "build": "npm run cleanup && npm run tsc && beetpx build --htmlTitle \"[dev] Avoid Your Past\"",
    "prod": "npm run build && beetpx preview",
    "itch": "npm run build && beetpx zip"
  },
  "devDependencies": {
    "@beetpx/beetpx": "0.25.0-fix1",
    "@jest/globals": "29.5.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "jest-environment-jsdom": "29.7.0",
    "jquery": "3.7.1",
    "mkdirp": "3.0.1",
    "npm-check-updates": "^16.13.1",
    "prettier": "2.8.8",
    "prettier-plugin-organize-imports": "3.2.3",
    "rimraf": "5.0.0",
    "ts-jest": "29.1.1",
    "typescript": "5.0.4"
  }
}
